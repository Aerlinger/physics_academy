<div class="navbar navbar-fixed-top">

  <div class="navbar-inner">

    <div class="container">

      <%= link_to "", :root, id: "logo" %>

      <div class="nav-collapse">
        <ul class="nav pull-right">

          <li class=<%= is_active?(:root) %>>
            <%= link_to "Home", :root %>
          </li>

          <li class=<%= is_active?(lessons_path) %>>
            <%= link_to "Lessons".html_safe, lessons_path, class: "dropdown-toggle" %>
          </li>

          <li class=<%= is_active?(labs_path) %>>
            <%= link_to "Labs".html_safe, labs_path, class: "dropdown-toggle"  %>
          </li>

          <li class=<%= is_active?(about_path) %>>
            <%= link_to "About", about_path %>
          </li>

          <li class="divider-vertical"></li>
          <% if user_signed_in? %>
            <%= render partial: "layouts/user_thumbnail" %>
          <% elsif guest_user? %>
            <li class=<%= is_active?(new_user_registration_path) %>>
              <%= link_to "Sign in or Sign up to save", new_user_registration_path %>
            </li>
          <% else %>
            <li><%= link_to "Sign in", new_user_session_path, class: "login_link" %></li>
            <li><%= link_to "Create Account", new_user_registration_path, class: "login_link" %></li>
          <% end %>
          <li class="divider-vertical" style="margin: 0"></li>

        </ul>

      </div>

    </div>

  </div>

</div>

       