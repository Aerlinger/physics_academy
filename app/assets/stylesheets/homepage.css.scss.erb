$row1_height: 380px;

#interactive-preview {
  height: $row1_height;
}

#call_to_action_pane {
  height: $row1_height;
}

#landing {

  .landing-text {

    margin-top: 20px;
    margin-left: 10px;
    height: 310px;

    h3 {
      font-size: 18px;
      line-height: 27px;
    }

    p {
      margin-top: 1em;
      font-size: 13px;
      line-height: 1.3em;
    }

    .call_to_action {
      margin-right: 20px;
      padding-top: 20px;
      height: 95px;

      #call_to_action_btn {
        display: table;
        font-weight: bold;
        font-size: 2em;

        border: 2px solid #d3ffdd;

        -webkit-box-shadow: inset 0px 0px 3px 1px rgba(0, 0, 0, .7);
        box-shadow: inset 0px 0px 3px 1px rgba(0, 0, 0, .7);

        margin: auto;
        width: 230px;
      }

    }

  }

  .landing-screenshot {
    position: relative;

    text-align: right;

    img {
      max-width: 100%;
      position: relative;
    }
  }

  .landing-actions {
    margin-top: 2em;

    .btn {
      padding: 12px 12px;
      margin-right: .5em;

      font-size: 240px;
      font-weight: 600;
    }
  }
}

.features-list {
  .feature-content .thumbnail {
    margin-bottom: 1em;
  }

  .features-list {
    h2 {
      font-size: 24px;
      line-height: 36px;
    }
  }
}

#screenshots {
  img {
    max-width: 100%;
  }

  h3 {
    margin-bottom: .25em;
  }

  .thumbnail {
    border-color: #BBB;
  }
}

.screenshot {
  position: relative;

  display: inline-block;
}

.screenshot-zoom {
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -15px;
  margin-left: -15px;

  width: 30px;
  height: 30px;
  display: block;

  background: url(<%= asset_path "theme/magnifier.png" %>);
}

.screenshot:hover .screenshot-zoom {
  background-position: 0 -30px;
}

/*------------------------------------------------------------------
[3. Landing / #landing]
*/

#landing {

  height: auto;
  border: none;
  overflow: hidden;

  .container {
    padding-top: 10px;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .inner {
    color: #FFF;
    background: #989099 url(<%= asset_path 'theme/chalkboard-dense.jpg' %>) repeat 0 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, .4);

    .canvas_wrapper {
      padding: 0;
      margin: 0;
    }
  }

}

@media (min-width: 1200px) {

  .landing-text {

    padding-left: 20px;

    h1 {
      margin-bottom: .3em;

      font-size: 3.0em;
      font-weight: 600;
      line-height: 1.2em;
    }

    h2 {
      font-size: 1.7em;
    }
  }

}

@media (min-width: 767px) and (max-width: 979px) {

  .landing-text {

    h1 {
      font-size: 18px;
      font-weight: 600;
      line-height: 1.5em;
    }

    p {
      font-size: 11px;
      line-height: 2em;
    }
  }

  .landing-actions {
    margin-top: 1.5em;

    .btn {
      padding: 9px 9px;
      margin-right: .25em;

      font-size: 13px;
    }
  }

}

@media (max-width: 979px) {

  .feature .feature-content {
    padding-left: 0;

    p {
      text-align: justify;
    }

    img {
      width: 28px;
    }
  }

  .circle-icon {
    width: 40px;
    height: 40px;

    div {
      width: 34px;
      height: 34px;
      margin-top: -17px;
      margin-left: -17px;

      font-size: 16px;
      line-height: 30px;
    }
  }

  testimonials-list .img {
    width: 40px;
  }

}

@media (max-width: 767px) {

  .landing-screenshot {
    margin-top: 2em;
  }

  .landing-actions {
    margin: 3.5em 0;

    text-align: center;

    .btn {
      padding: 9px 13px;
    }
  }

  .features-list .feature {
    width: 100%;
    margin-bottom: .25em;
  }

  .features-list .feature .feature-content {
    padding-left: 0;
  }

}