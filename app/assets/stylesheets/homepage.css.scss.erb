$row1_height: 380px;

#interactive-preview {
  height: $row1_height;
}

#call-to-action-pane {
  height: $row1_height;
}

#call-to-action {
  width: 200px;
}

.landing-text {

  margin-left: 1em;
  
  h1 {
    margin-bottom: .3em;

    font-size: 1.8em;
    font-weight: 600;
    line-height: 1.5em;
  }

  p {
    margin-top: 1em;
    font-size: 13px;
    line-height: 1.5em;
  }

