  <div class="accordion-group" style="margin: 15px auto">

    <!-- SUBJECT DESCRIPTION -->
    <div class="accordion-heading lesson-preview" style="height: 150px">
      <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapse<%= lesson.id %>">
        <div class="lesson-preview-thumbnail"></div>
        <h3>
          <%= lesson.title %>
        </h3>
        <p>
          <%= lesson.description %>
        </p>

        <div class="clear-float"></div>
      </a>
    </div>

    <!-- LESSON DESCRIPTIONS -->
    <div id="collapse<%= lesson.id %>" class="accordion-body collapse" style="height: 0px; ">
      <div class="accordion-inner">
        <ul class="nav nav-tabs nav-stacked">

          <% lesson.challenges.all.each_with_index do |challenge, index| %>
            <li>
              <a href="<%= lesson_challenge_path(lesson_id: lesson.id, id: challenge.id) %>">
                <h4> <%= index+1 %> </h4> <%= challenge.content %>
                <div class="progress progress-striped active span3 active" style="float: right">
                  <div class="bar" style="width: 50%"></div>
                </div>
              </a>
            </li>
          <% end %>

        </ul>
      </div>
    </div>

  </div>


