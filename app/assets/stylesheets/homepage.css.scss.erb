.features-list .feature-thumbnail {
	display: table-cell;
	vertical-align: top;
	
	width: 40px;
}

.features-list .thumbnail {
	border-color: #CCC;
}

.feature-content {
	//display: table-cell;


  .thumbnail {
    margin-bottom: 1em;
  }
	vertical-align: top;
  padding-top: .25em;

  img {
    margin: 0 auto;
  }
  
  p{
    text-align: justify;
    text-justify: auto;
  }
	//padding-left: 1em;

}

.features-list .feature-content h3 {
	margin-bottom: 0;
	
	font-size: 13px;
	font-weight: 600;
	color: #111;
}





ul.testimonials-list {	
	padding: 12px;
	margin: 0;	
	
    background: #EEE;
	
	-moz-border-radius: 7px;
	-webkit-border-radius: 7px;
	border-radius: 7px;
}


ul.testimonials-list li {
	display: table;
	padding-top: 1.5em;
	
	list-style: none;
	
	border-bottom: 1px solid #D2D2D2;
	border-top: 1px solid #FFF;
}

ul.testimonials-list li:first-child {
	padding-top: .75em;
	
	border-top: none;	
}

ul.testimonials-list li:last-child {
	padding-bottom: 0;
}

ul.testimonials-list li:last-child {
	border-bottom: none;
}


ul.testimonials-list .testimonial-avatar {

	display: table-cell;
	vertical-align: top;

}


ul.testimonials-list .testimonial-text {
	display: table-cell;
	padding-left: 1em;
	vertical-align: top;
	
	color: #444;
}

ul.testimonials-list .testimonial-author {
	display: block;
	
	font-weight: bold;
	color: #777;
}
    
#testimonials h3 {
	color: #222;
}

ul.testimonials-list .img {
	width: 55px;
}   




@media (min-width: 1200px) {
	
	.landing-text {
    
    padding-left: 1em;
    
    h1 {
      margin-bottom: .3em;

      font-size: 3.0em;
      font-weight: 600;
      line-height: 1.5em;
    }
		
    h2 {
      font-size: 1.7em;

      //text-shadow: none;
    }
	}
	
}




@media (min-width: 767px) and (max-width: 979px) {
	
	.landing-text h1 {	
		font-size: 18px;	
		font-weight: 600;
		line-height: 1.5em;
	}
	
	.landing-text p {
		font-size: 11px;
		line-height: 2em;
	}
	
	.landing-actions .btn {
		padding: 9px 9px;
		margin-right: .25em;
		
		font-size: 13px;
	}
	
	.landing-actions {
		margin-top: 1.5em;
	}	
	

}




@media (max-width: 979px) {

		
	.feature .feature-content {
		padding-left: 0;

    p {
      text-align: justify;
    }
	}
	
	.feature img {
		width: 28px;
	}
	
	.circle-icon {
		width: 40px;
		height: 40px;

    div {
      width: 34px;
      height: 34px;
      margin-top: -17px;
      margin-left: -17px;

      font-size: 16px;
      line-height: 30px;
    }
	}
	
	testimonials-list .img {
		width: 40px;
	}  
	
}


@media (max-width: 767px) {
	
	.landing-screenshot {
		margin-top: 2em;
	}
		
	.landing-actions {
		margin: 3.5em 0;
		
		text-align: center;
	}
	
	.landing-actions .btn {
		padding: 9px 13px;
	}
	
	.features-list .feature {
		width: 100%;
		margin-bottom: .25em;
	}
	
	.features-list .feature .feature-content {
		padding-left: 0;
	}

}