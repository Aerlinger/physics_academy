<div class="box-container span3">

  <div class="box-header">

    <div class="box-title">
      Badges earned
    </div>

    <div class="box-subheader">
      <%= image_tag "thumbs/default.png" %> <span class="term">Level: Quark</span>
    </div> <!-- /plan-price -->

  </div>

  <div class="box-actions">
    <a href="javascript:;" class="btn">Edit Profile</a>
  </div>

</div>

<div class="box-container orange-header span9">

  <div class="box-header">

    <div class="box-title">
      Recent Lessons
    </div>

  </div>

  <div class="box-features">
    <ul class="nav">

      <% @user.subscriptions.all.each_with_index do |subscription, index| %>
        <%= content_tag :li, link_to("#{index+1}: #{subscription.lesson.title}", lesson_task_path(subscription.lesson.id) ) %>
      <% end %>

    </ul>
  </div>

  <div class="box-actions">
    <a href="javascript:;" class="btn">View More Lessons</a>
  </div>

</div>