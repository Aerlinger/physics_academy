@import "bootstrap";

/*------------------------------------------------------------------
  CSS for windows and frames used in Physics Academy
-------------------------------------------------------------------*/
$radius: 5px;

.rounded-top {
  -webkit-border-top-right-radius: $radius;
  -webkit-border-top-left-radius: $radius;
  -moz-border-radius-topright: $radius;
  -moz-border-radius-topleft: $radius;
  border-top-right-radius: $radius;
  border-top-left-radius: $radius;
}

.rounded-bottom {
  -moz-border-radius-bottomleft: $radius;
  -moz-border-radius-bottomright: $radius;
  border-bottom-right-radius: $radius;
  border-bottom-left-radius: $radius;
}

/*-- Box Container --*/
.box-container {
  position: relative;
  float: left;

  margin-top: 15px;
  margin-bottom: 15px;

  label {
    font-weight: bold;
  }

  table {
    padding-left: 50px;
  }

  #edit_profile_column1 {
    margin-left: 50px;
  }

  #edit_profile_column2 {
    margin-left: 20px;
  }

  form {
    margin-bottom: 0;
  }
}

/*-- Box Header --*/
.box-header {
  @extend .rounded-top;

  text-align: center;
  color: #FFF;

  background-color: #821800;

}

.box-title {
  padding: .5em 1em;

  font-size: 1.3em;
  color: #FFF;

  text-shadow: 1px 1px 1px rgba(0, 0, 0, 0.4);
  border-bottom: 1px solid rgba(0, 0, 0, 0.3);
}

.box-subheader {

  padding: 1.0em 0 .5em 0;

  font-size: 1em;

  background: url(<%= asset_path("tasks/lesson_bg_default.jpg") %>) repeat;

  border-top: 1px solid rgba(255, 255, 255, 0.5);
  border-top: 1px solid rgba(0, 0, 0, 0.48);

  span.term {
    font-weight: bold;

    display: block;
    margin: .8em auto;

    text-align: center;
    font-size: 5em;
    padding: 0;

    span.small {
      text-align: center;
      font-size: .3em;
    }
  }

  span.note {
    position: relative;
    top: -40px;

    display: inline;

    font-size: 1em;
    line-height: 0.8em;
  }
}

.breadcrumb {
 margin: 0;
}

.box-content {

  border-left: 1px solid lightgray;
  border-right: 1px solid lightgray;

  .feature-block {
    padding: 5px !important;
    .thumbnail {
      margin-bottom: 3px !important;
    }
  }

  p {
    padding: .8em;
    margin: 0;
    color: #212121;
    line-height: 1.5em;
    font-size: 1.1em;
  }

  #covered_topics {
    background-color: #f8fbef;
    text-align: center;
    border-bottom: 1px solid #ffdbaa;
    font-weight: bolder;
    color: black
  }

  .well, .breadcrumb {
    padding: 0;
    margin: 0;
    width: 100%;
    border: 1px solid #c1c1c1;
    background-color: white;
  }

  ul {
    margin-bottom: 0 !important;
    padding: 0 !important;
  }

  background-color: #fffcf9;
}

#login-box {
  margin-top: 50px;

  #new_user.form-horizontal {
    margin-bottom: 0px;
  }
  .devise-links {
    margin-bottom: 60px;
  }
}

/*-- Features --*/

.box-features {

  border: 1px solid #DDD;
  border-bottom: none;
  background: white;
  padding-bottom: 1em;
  padding-top: .5em;

  color: #170505;

  .control-group {
    margin: 0 auto;
    display: table;
    margin-top: 8px;
  }

  .control-group:first-child {
    margin-top: 15px;
  }

  .control-group:last-child {
    margin-bottom: 15px;
  }

  ol {
    padding: 0;
    margin: 0;

    font-size: 1.1em;
    font-weight: bold;

    list-style-type: decimal;
  }

  li {

    list-style-position: inside;

    padding: 0;
    margin: 0;

    text-align: left;
    border-bottom: 1px solid #CCC;

    a {
      padding: .5em 1em;
      font-weight: bold;
      display: block;

      i {
        font-style: normal;
      }

      color: #ab1515;

    }

  }

  li.active {

    background-color: #0d331e;

    a {
      font-weight: bold;
      color: #fdfdfd;
    }

    a:hover {
      background-color: #165330;
      color: black;
    }

    ol & {
      color: white;
    }

  }

  li.completed {

    background-color: #ccfad7;
    i {
      margin-right: .2em;
      color: #96c4a1;
    }

    a {
      color: #002702;
    }

    a:hover {
      color: black;
    }
  }

  li:last-child {
    border-bottom: none;
  }

  fieldset {
    padding-right: 2em;
    padding-top: 1.3em;
    margin-bottom: -1em;
  }

}

.box-features.form {
  padding: 1em;
}

.box-actions {

  @extend .rounded-bottom;

  padding: .5em 1em;

  background-color: whiteSmoke;
  background-image: -moz-linear-gradient(top, #F8F8F8, #E6E6E6);
  background-image: -ms-linear-gradient(top, #F8F8F8, #E6E6E6);
  background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#F8F8F8), to(#E6E6E6));
  background-image: -webkit-linear-gradient(top, #F8F8F8, #E6E6E6);
  background-image: -o-linear-gradient(top, #F8F8F8, #E6E6E6);
  background-image: linear-gradient(top, #F8F8F8, #E6E6E6);
  background-repeat: repeat-x;
  filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '#ffffff', endColorstr = '#e6e6e6', GradientType = 0);
  border-color: #E6E6E6 #E6E6E6 #BFBFBF;
  border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
  filter: progid:dximagetransform.microsoft.gradient(enabled = false);

  border: 1px solid #DDD;


  .btn {
    display: block;

    padding: .2em 0;
    margin: 0 auto;
    width: 8em;

    font-size: 1.2em;
    font-weight: 600;
  }

  .btn.pull_right {
    float: right;
    width: 8em;
  }

  .btn.full-width {
    display: block;
    width: 85%;
    position: relative;
    left: 12px;
  }
}

/*-- Orange Box --*/

.box-container.orange-header .box-header {
  background-color: #bf6e00;
  text-align: left;

  .plan-title {
    padding-left: 2em;
  }

}

.box-container.yellow-header .box-header {
  background-color: #dec23b;
  text-align: left;
  color: black;

  border-radius: 10px;
  -moz-border-radius: 10px;
  -webkit-border-radius: 10px;

  .plan-title {
    padding-left: 2em;
  }

}

/*-- Columns --*/

.pricing-plans.plans-1 .box-container {
  width: 100%;
}

.pricing-plans.plans-2 .box-container {
  width: 50%;
}

.pricing-plans.plans-3 .box-container {
  width: 33.33%;
}

.pricing-plans.plans-4 .box-container {
  width: 25%;
}

/*------------------------------------------------------------------
[2. Min Width: 767px / Max Width: 979px]
*/

@media (min-width: 767px) and (max-width: 979px) {

  .pricing-plans .box-container {
    width: 50% !important;
    margin-bottom: 2em;
  }

}

@media (max-width: 767px) {

  .pricing-plans .box-container {
    width: 100% !important;
    margin-bottom: 2em;
  }

}