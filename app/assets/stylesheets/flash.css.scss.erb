.alert .close {
  font-size: 24px;
  position: relative;
  top: -11px;
  right: 21px;
  line-height: 18px;
  color: black !important;
  opacity: .9;
}



.flash.alert {
  padding: 1em !important;
}

.flash {
  position: fixed;
  width: 100%;
  top: 0;

  margin: 0;
  border-radius: 0;
  -moz-border-radius: 0;
  -webkit-border-radius: 0;

  .content {
    font-size: 3em;
  }

  h1, h2, h3, h4 {
    text-align: center;
    margin: 0;
  }
}

.flash h4 {
  font-size: 16px;
  color: black;
}

.flash.alert-info {

  background: #abf293; /* Old browsers */
  background: -moz-linear-gradient(top,  #abf293 0%, #cae8be 100%); /* FF3.6+ */
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#abf293), color-stop(100%,#cae8be)); /* Chrome,Safari4+ */
  background: -webkit-linear-gradient(top,  #abf293 0%,#cae8be 100%); /* Chrome10+,Safari5.1+ */
  background: -o-linear-gradient(top,  #abf293 0%,#cae8be 100%); /* Opera 11.10+ */
  background: -ms-linear-gradient(top,  #abf293 0%,#cae8be 100%); /* IE10+ */
  background: linear-gradient(to bottom,  #abf293 0%,#cae8be 100%); /* W3C */
  filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#abf293', endColorstr='#cae8be',GradientType=0 ); /* IE6-9 */


  border-bottom: 2px solid #003000;
  color: #396831;

  -webkit-box-shadow:  0px 1px 7px 1px rgba(0, 0, 0, .3);
  box-shadow:  0px 1px 7px 1px rgba(0, 0, 0, .3);
}

