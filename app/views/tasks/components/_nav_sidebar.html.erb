<!-- HEADER CONTENT -->
<div class="box-header">

  <!-- TITLE -->
  <div class="box-title">
    <%= @lesson.title %>
  </div>

  <!-- LOGO AND PROGRESS -->
  <div class="box-subheader">
    <span class="term">
      <%= @subscription.points %>
      <br />
      <span class="small">points earned</span>
    </span>
  </div>

</div>

<!-- NAVIGATION LIST -->
<div class="box-features">
  <ol id="task_nav" class="nav">

    <% @lesson.tasks.all.each_with_index do |task, index| %>

      <% link_url = lesson_task_path(lesson_id: @lesson.id, id: task.id) %>
      <% task_completed = @subscription.completed_task_id?(task.id) %>
      <% class_type = "#{'active' if @task.index == (index+1)} #{'completed' if task_completed}" %>

      <%=
          content_tag :li, class: class_type do
            link_to link_url, id: "task_#{index+1}", id_offset: :index do
              raw("#{task.title.html_safe} #{"<i class='icon-ok'></i>" if task_completed}")
            end
          end
      %>

    <% end %>

  </ol>
</div>

<!--Just for decoration-->
<div class="box-actions"> </div>