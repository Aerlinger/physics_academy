.big-intro {

  font-size: 28px;
  line-height: 1.7em;
  color: #4d4d4d;

  padding: 1em 0;

  border: 1px solid #e6e6e6;
  border-right: none;
  border-left: none;

  .backdrop {

    margin: 0;
    height: 241px;
    font-size: 1.5em;
    background: url(<%= asset_path "about/header2.jpg" %>) no-repeat;

  }
}

.about-user {
  margin: 0 0 3.75em 0;

  .img {
    float: left;
    width: 65px;
    margin: 0 1em .5em 0;
  }
}

@media (max-width: 767px) {
  .about-user {
    width: 100%;
    display: inline-block;
    margin: 0 0 1.75em;

    .img {
      width: 55px;
    }
  }

}