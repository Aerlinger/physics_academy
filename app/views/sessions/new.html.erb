<%# This page is shown as the sign-in page %>
<% provide( :title, "Sign in") %>

<div id="subheader">

  <div class="inner">

    <div class="container">

      <h1>Sign In</h1>

    </div> <!-- /.container -->

  </div> <!-- /inner -->

</div> <!-- /subheader -->

<div class = "container">

  <div class="row">
    <div class="span6 offset3">
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>
        <br />
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <% end %>

      <p>New to Physics Academy? <%= link_to "Sign up now!", signup_path %></p>

    </div>
  </div>
</div>