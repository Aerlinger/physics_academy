/** Physics academy color theme */
/** color palette */

$borderOrange: #ffdab5;
$borderDarkOrange: #ffdab5;
$darkOrange: #bb5e02;
$orange: #FF8C00;
$lightOrange: #ffa500;
$yellow: #ffff00;



/*------------------------------------------------------------------
Video
*/

iframe {
  position: relative;
  left: 50px;
}

/*------------------------------------------------------------------
[Simulators (Newton and Faraday)]
*/

canvas {
  background-color: black;
}

.newton {
  <% if Rails.env.development? %> border: 1px solid #ff4500;
  <% end %>
}

.faraday {
  <% if Rails.env.development? %> border: 1px solid green;
  <% end %>
}

/*------------------------------------------------------------------
[Miscellaneous]
*/


.slash {
  color: $lightOrange;
}

.sidebar {
  background: #EEE;
}

.padded {
  padding: 1em 2em;
}

.number {
  font-size: .5em;
  font-weight: bold;
}

.clear_margins {
  margin: 0;
}
