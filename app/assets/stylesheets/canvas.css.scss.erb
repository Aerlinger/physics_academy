/*------------------------------------------------------------------
  CSS Styles defining HTML5 canvas element.
*/

$title_height: 30px;
$outer_border_width: 2px;
$outer_corner_radius: 5px;
$shadow_color: 333;
$opacity: .8;

/*------------------------------------------------------------------
[Simulators (Newton and Faraday)]
*/

canvas {
  background-color: black;
  -moz-border-radius: 2px;
  -webkit-border-radius: 2px;
  -o-border-radius: 2px;
  border-radius: 2px;

}

.canvas_wrapper {

  display: table;
  margin: 0 auto;

  canvas {
    -webkit-border-radius: $outer_corner_radius;
    -moz-border-radius: $outer_corner_radius;
    border-radius: $outer_corner_radius;

    background: url(<%= asset_path "newton/checker10px.png" %>) repeat;

    border: $outer_border_width solid #8b0000;
    position: static;
    z-index: 0;
  }

  a.title {
    padding: 0 .8em;

    background-color: #444;
    color: white;
    font-weight: bold;

    text-decoration: none;
    position: absolute;
    z-index: 1;
    height: $title_height;
    line-height: $title_height;

    overflow: hidden;
    white-space: nowrap;

    margin-left: $outer_border_width;
    margin-top: $outer_border_width;

    font-size: 1.0em;
    font-family: "Arial", "Helvetica", "Helvetica New" "Verdana";

    -webkit-border-bottom-right-radius: 5px;
    -moz-border-radius-bottomright: 5px;
    border-bottom-right-radius: 5px;

    -webkit-border-top-left-radius: $outer_corner_radius - $outer_border_width - 1;
    -moz-border-top-left-radius: $outer_corner_radius - $outer_border_width - 1;
    border-top-left-radius: $outer_corner_radius - $outer_border_width - 1;

    opacity: $opacity;
    -moz-opacity: $opacity;
    -webkit-opacity: $opacity;

    -moz-box-shadow: 1px 2px 3px $shadow_color;
    -webkit-box-shadow: 1px 2px 3px $shadow_color;
    box-shadow: 1px 2px 3px $shadow_color;

    border-right: 1px solid orange;
    border-bottom: 1px solid orange;
  }

  a:hover {
    text-decoration: underline;
    color: white;
    opacity: 1;
    -moz-opacity: 1;
    -webkit-opacity: 1;
  }

  .questions {
    border: 1px solid red;
    color: green;
  }

}