<%# This page is shown as the User sign-in page %>
<% provide( :title, "Sign in") %>

<%= render :partial => 'layouts/subheader', locals: {title: "Sign In"} %>

<div class="container">

  <div class="row offset3">


    <div class="box-container span6 clear_margins">


      <div class="box-header box-title">
        <!--<div class="box-title">-->
        Enter your login info
        <!--</div>-->
      </div>


      <%= form_for(:session, url: sessions_path, class: "form-horizontal") do |f| %>

        <fieldset>

          <div class="box-features">

            <div class="control-group">
              <%= f.label :email, class: "control-label" %>
              <div class="controls">
                <%= f.text_field :email, class: "input-xlarge focused" %>
              </div>
            </div>

            <div class="control-group">
              <%= f.label :password, class: "control-label" %>
              <div class="controls">
                <%= f.password_field :password, class: "input-xlarge" %>
              </div>
            </div>

          </div>

          <div class="box-actions">
            <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
          </div>

        </fieldset>

      <% end %>

      <p>New to Physics Academy? <strong><%= link_to "Sign up now!", signup_path %></strong> <br />
      <strong><%= link_to "Forgot Password? ", signup_path %></strong>
      </p>

    </div>

  </div>


</div>
