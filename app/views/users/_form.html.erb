<div class="row offset3">

  <div class="box-container span6 clear-side-margins shadow" style="margin-top: 45px; margin-bottom: 250px;">

    <div class="box-header box-title">
      Create a new Account
    </div>

    <%= form_for(@user) do |f| %>

      <%= render 'shared/error_messages', object: @user %>

        <fieldset>

        <div class="box-features">

          <div class="control-group">
            <%= f.label :name, class: "control-label", text: "Name (optional)" %>
            <div class="controls">
              <%= f.text_field :name, class: "input-xlarge focused" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :email, class: "control-label" %>
            <div class="controls">
              <%= f.text_field :email, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password, class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password, class: "input-xlarge" %>
            </div>
          </div>

          <div class="control-group">
            <%= f.label :password_confirmation, "Confirmation", class: "control-label" %>
            <div class="controls">
              <%= f.password_field :password_confirmation, class: "input-xlarge" %>
            </div>
          </div>

          <p>Already have an account? <%= link_to "Sign in", new_user_session_path, style: "font-weight: bold" %></p>

        </div>

        <div class="box-actions" style="margin-bottom: 1px;">
          <%= f.submit "Sign Up", class: "btn btn-success btn-large btn-primary" %>
        </div>

      </fieldset>

    <% end %>

  </div>

</div>


