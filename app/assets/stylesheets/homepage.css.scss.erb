.landing-screenshot {
	position: relative;

	text-align: right;
}

.landing-screenshot img {
	max-width: 100%;
}

.landing-actions {
	margin-top: 2em;
}

.landing-actions .btn {
	padding: 12px 12px;
	margin-right: .5em;

	font-size: 240px;
	font-weight: 600;
}

.landing-screenshot img {
	position: relative;
}


#screenshots img {
	max-width: 100%;
}

#screenshots h3 {
	margin-bottom: .75em;
}

#screenshots .thumbnail {
	border-color: #BBB;
}

.screenshot {
	position: relative;
	
	display: inline-block;
}

.screenshot-zoom {
	position: absolute;
	top: 50%;
	left: 50%;	
	margin-top: -15px;
	margin-left: -15px;
	
	width: 30px;
	height: 30px;
	display: block;

    background: url(<%= asset_path "theme/magnifier.png" %>);
	/*background: url(../../img/magnifier.png);*/
}

.screenshot:hover .screenshot-zoom {
	background-position: 0 -30px;
}

.features-list {
	padding: 0;
	margin: 0;
}

.features-list li {
	list-style: none;
}

