/** Physics academy color theme */
/** color palette */
$borderRed: #ab1515;
$borderOrange: #ffdab5;
$borderDarkOrange: #ffdab5;
$darkOrange: #bb5e02;
$orange: #FF8C00;
$lightOrange: #ffa500;
$yellow: #ffff00;


/*------------------------------------------------------------------
[Navbar]
*/

.navbar .nav > li.active > a,
.navbar .nav > li.active > a:hover {
	color: $lightOrange;
}

.navbar .nav > li > a {
	color: #FFF;
	
    text-shadow: 1px 1px 2px rgba(0,0,0,.5);
}

.navbar .nav > li > a:hover {
	color: #BBB;
}

.navbar .nav {
  margin-top: 5px;
}

.navbar {
	border-bottom-color: $borderOrange;
}

.navbar .navbar-inner {
	background: #333;	
	
	border-bottom: 1px solid #111;	
}

.navbar .brand {

	width: 180px;
	height: 50px;

  margin-bottom: -15px;
	
	background: url(<%= asset_path "theme/logo.png" %>) no-repeat 0 0;

}




/*------------------------------------------------------------------
[Content]
*/


#content .inner {	
	
	background: #fff;
}

#content .container {
	border-width: 4px;
	border-color: #444;
}



/*------------------------------------------------------------------
[Landing]
*/

#landing .inner {
	background: #81994D url(<%= asset_path 'theme/header-bg.png' %>) repeat 0 0;
	
	text-shadow: 1px 1px 2px rgba(0,0,0,.4);
}


/*------------------------------------------------------------------
[Screenshots / #screenshots]
*/	

#screenshots {	
	background: #E8E8E8;
	
	border-top: 1px solid #CCC;
}

#screenshots .inner {
	border-top: 1px solid #FFF;
}




/*------------------------------------------------------------------
[Subheader]
*/

#subheader {
	color: #EEE;
	
	background: #444;
	
	border-color: $borderRed;
}

#subheader .inner {
	background: #81994D url(<%= asset_path "theme/header-bg.png" %>) repeat 0 0;
	
}



/*------------------------------------------------------------------
[Extra]
*/

#extra {

	border-top: 1px solid #000;
}

#extra .inner {	
	color: #fff;

  /*background-color: #222;*/

	border-top: 1px solid #555;
}



/*------------------------------------------------------------------
[Footer]
*/

#footer {

	border-top: 1px solid #000;
}

#footer .inner {		
	background: #111;
	
	border-top: 1px solid #222;	
}

.footer-links a {
	color: #777;
}



/*------------------------------------------------------------------
[Miscellaneous]
*/

.circle-icon {	
	
	background: #393939;
}

.circle-icon div {	
	//color: #81994D;
  color: $orange;
}

.slash {
	//color: #677E30;
  color: $lightOrange;
}

.sidebar {
	
	background: #EEE;
}



.nav-list > li.active > a,
.nav-list > li.active > a:hover {		
	color: #FFF;
	
	background: $orange;
}